<div >
	<div class="container wrapper">
		<div class="span12 ">
			<div class="row-fluid">
				<div class="span12 " >
					<div class="row-fluid">
						<div class="span12">
							  <div class="ban" >
									<div class="text-center" style="padding-top:15px"><a href="#" class="btn btn-info btn-lg">
							  <span class="glyphicon glyphicon-headphones"></span>论坛聊天室
							</a></div>
							
							<div style="padding-top:70px" class="pull-left" id="status"></div>
							
<div class="pull-right" style="padding-top:50px"> <a href="http://www.ssforum.top/users"><%=user.name || user.username %></a>
<img src='<%=user.avatar %>' height="60px" width="60px"/>
						 </div> </div>						</div>
					</div>
					<div class="row-fluid">
						 <div id="historyMsg" style="clear:both">
            </div>
					</div>
					<div class="row-fluid">
						
										<div class="controls" >
										<div class="items">
											<input id="colorStyle" type="color" placeHolder='#000' title="font color" />
											<input id="emoji" type="button" value="emoji" title="emoji" />
											<label for="sendImage" class="imageLable">
												<input type="button" value="image"  />
												<input id="sendImage" type="file" value="image"/>
											</label>
											<input id="clearBtn" type="button" value="clear" title="clear screen" />
										</div>
										
										<div class="row-fluid">
										
										<div class="span6">
										<textarea id="messageInput" placeHolder="点击输入"></textarea>
										</div>
										<div class="span6">
										<input id="sendBtn" type="button" class="btn-info " value="SEND">
										</div>
									</div>
										
								
										
										
										
										<div id="emojiWrapper">
										</div>
								
									
									
								
									<div class="row-fluid">
											<div id="loginWrapper">
										<p id="info">connecting to server...</p>
										<div id="nickWrapper" class="text-primary">
											<input type="text"  id="nicknameInput" value="<%=user.name ||user.username %>" />
											<input type="button" value="OK" id="loginBtn" />
										</div>
									</div>
							</div>
									
									</div>
							</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
